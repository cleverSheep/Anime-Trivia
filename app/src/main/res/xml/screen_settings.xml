<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:title="Settings">
    <PreferenceCategory app:title="Basic">
        <ListPreference
            app:entries="@array/settings_list_preference_titles"
            app:entryValues="@array/settings_list_preference_values"
            app:icon="@drawable/ic_language_black_24dp"
            app:key="language"
            app:title="Language"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreferenceCompat
            app:icon="@drawable/ic_volume_up_black_24dp"
            app:title="Sound Effects" />
        <SwitchPreferenceCompat
            app:icon="@drawable/ic_music_note_black_24dp"
            app:title="In-Game Music" />
        <SwitchPreferenceCompat
            app:icon="@drawable/ic_brightness_2_black_24dp"
            app:title="Dark Mode" />
    </PreferenceCategory>

    <PreferenceCategory app:title="Other">
        <Preference
            app:icon="@drawable/ic_info_black_24dp"
            app:key="about"
            app:title="About" />
        <Preference
            app:icon="@drawable/ic_exit_to_app_black_24dp"
            app:key="sign_out"
            app:title="Sign Out">
            <intent
                android:targetClass="com.murrayde.animeking.view.auth.AuthenticationActivity"
                android:targetPackage="com.murrayde.animeking" />
        </Preference>
    </PreferenceCategory>
</PreferenceScreen>
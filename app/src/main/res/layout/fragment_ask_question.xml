<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background_dark"
    tools:context=".screen.ask_question.AskQuestion">

    <ImageView
        android:id="@+id/iv_ask_question"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/anime_image"
        android:scaleType="centerCrop"
        android:visibility="visible"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/dbzpriginal" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/ask_question_foreground"
        app:layout_constraintBottom_toBottomOf="@+id/iv_ask_question"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_ask_question"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/gilroy_extra_bold"
        android:gravity="start"
        android:maxLines="2"
        android:paddingEnd="@dimen/_8sdp"
        android:textAlignment="viewStart"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_20sdp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_ask_question"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/editText_enter_question"
        tools:ignore="RtlSymmetry"
        tools:text="Anime Title" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editText_enter_question"
        android:layout_width="0dp"
        android:layout_height="125dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:layout_marginTop="16dp"
        android:autofillHints="Enter Question"
        android:background="@drawable/ask_question_background"
        android:breakStrategy="high_quality"
        android:fontFamily="@font/gilroy_extra_bold"
        android:gravity="top"
        android:hint="@string/enter_question"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLength="120"
        android:maxLines="4"
        android:scrollHorizontally="false"
        android:textColor="@color/color_white"
        android:textColorHint="#B3FFFFFF"
        android:textCursorDrawable="@drawable/cursor_drawable"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_ask_question" />

    <EditText
        android:id="@+id/editText_correct_choice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/correct_question_background"
        android:backgroundTint="#3333CF80"
        android:backgroundTintMode="src_in"
        android:fontFamily="@font/gilroy_extra_bold"
        android:hint="@string/correct_choice"
        android:inputType="text"
        android:maxLines="1"
        android:textAlignment="center"
        android:textColor="@color/color_white"
        android:textColorHint="#B3FFFFFF"
        android:textCursorDrawable="@drawable/cursor_drawable"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_enter_question" />

    <EditText
        android:id="@+id/editText_wrong_two"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/wrong_question_background"
        android:backgroundTint="#33FF333E"
        android:backgroundTintMode="src_in"
        android:fontFamily="@font/gilroy_extra_bold"
        android:hint="@string/wrong_choice"
        android:inputType="text"
        android:maxLines="1"
        android:textAlignment="center"
        android:textColor="@color/color_white"
        android:textColorHint="#B3FFFFFF"
        android:textCursorDrawable="@drawable/cursor_drawable"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_wrong_one" />

    <EditText
        android:id="@+id/editText_wrong_three"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/wrong_question_background"
        android:backgroundTint="#33FF333E"
        android:backgroundTintMode="src_in"
        android:fontFamily="@font/baloobhairegular"
        android:hint="@string/wrong_choice"
        android:inputType="text"
        android:maxLines="1"
        android:textAlignment="center"
        android:textColor="@color/color_white"
        android:textColorHint="#B3FFFFFF"
        android:textCursorDrawable="@drawable/cursor_drawable"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_wrong_two" />

    <EditText
        android:id="@+id/editText_wrong_one"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/wrong_question_background"
        android:backgroundTint="#33FF333E"
        android:backgroundTintMode="src_in"
        android:fontFamily="@font/gilroy_extra_bold"
        android:hint="@string/wrong_choice"
        android:inputType="text"
        android:maxLines="1"
        android:textAlignment="center"
        android:textColor="@color/color_white"
        android:textColorHint="#B3FFFFFF"
        android:textCursorDrawable="@drawable/cursor_drawable"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_correct_choice" />

    <Button
        android:id="@+id/button_submit_question"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="@drawable/ask_question_background"
        android:fontFamily="@font/baloobhairegular"
        android:text="@string/submit_question"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="@dimen/button_text_size"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/editText_wrong_three"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editText_wrong_three" />

    <ProgressBar
        android:id="@+id/progressBar_ask_question"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="146dp"
        tools:layout_editor_absoluteY="315dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/aq_return_home_button"
        android:layout_width="165dp"
        android:layout_height="54dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/game_button_3d_states"
        android:paddingHorizontal="@dimen/_24sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_submit_question"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_wrong_three">

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_arrow_back_ios_24px"
            app:layout_constraintBottom_toBottomOf="@+id/textView67"
            app:layout_constraintEnd_toStartOf="@+id/textView67"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView67" />

        <TextView
            android:id="@+id/textView67"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_extra_bold"
            android:text="@string/back"
            android:textColor="@color/color_black"
            android:textSize="@dimen/_15sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageView15"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tv_submit_question"
        android:layout_width="165dp"
        android:layout_height="54dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/game_button_3d_states"
        android:paddingHorizontal="@dimen/_24sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/aq_return_home_button"
        app:layout_constraintTop_toBottomOf="@+id/editText_wrong_three">

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_check_24px"
            app:layout_constraintBottom_toBottomOf="@+id/textView68"
            app:layout_constraintEnd_toStartOf="@+id/textView68"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView68" />

        <TextView
            android:id="@+id/textView68"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_extra_bold"
            android:text="@string/submit_question"
            android:textColor="@color/color_black"
            android:textSize="@dimen/_15sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageView16"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
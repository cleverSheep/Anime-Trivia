<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_home_logo"
    android:gravity="center"
    tools:context=".view.community.results_screen.ViewResults">

    <include
        layout="@layout/fragment_view_results_bottom_sheet"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view_results_upper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="16dp">


        <LinearLayout
            android:id="@+id/correct_layout"
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/game_over"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/baloobhairegular"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="45sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/quote"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                tools:text="Good Game!" />


            <TextView
                android:id="@+id/quote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/baloobhairegular"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/results_correct_percentage"
                app:layout_constraintEnd_toEndOf="@+id/game_over"
                app:layout_constraintStart_toStartOf="@+id/game_over"
                app:layout_constraintTop_toBottomOf="@+id/game_over"
                tools:text="@string/won_quote" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/correct_layout">


            <TextView
                android:id="@+id/results_correct_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/home_compete_background"
                android:fontFamily="@font/baloobhairegular"
                android:padding="16dp"
                android:text="1 out of 7 correct"
                android:textAlignment="center"
                android:textColor="@color/color_black"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/baloobhairegular"
                android:text="@string/time_bonus"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/results_correct_percentage"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/results_total_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/baloobhairegular"
                android:text="@string/points"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="@+id/textView12"
                app:layout_constraintTop_toBottomOf="@+id/textView12"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/results_time_bonus_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/baloobhairegular"
                android:textColor="@color/color_correct"
                android:textSize="30sp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/textView12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView12"
                tools:text="12"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/results_total_points_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/baloobhairegular"
                android:text="24pts"
                android:textColor="@color/color_correct"
                android:textSize="30sp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/results_total_points"
                app:layout_constraintEnd_toEndOf="@+id/results_time_bonus_points"
                app:layout_constraintTop_toTopOf="@+id/results_total_points"
                tools:text="13"
                tools:visibility="visible" />

            <View
                android:id="@+id/view"
                android:layout_width="411dp"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/home_bg_center"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/questions_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/results_total_points" />

            <LinearLayout
                android:id="@+id/questions_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="32dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view">

                <Button
                    android:id="@+id/results_try_again"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/home_play_background"
                    android:fontFamily="@font/baloobhairegular"
                    android:text="@string/try_again"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toTopOf="@+id/results_quit_game"
                    app:layout_constraintEnd_toEndOf="@+id/game_over"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="@+id/game_over"
                    app:layout_constraintTop_toBottomOf="@+id/textView12" />

                <Button
                    android:id="@+id/results_quit_game"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/results_quit_game"
                    android:fontFamily="@font/baloobhairegular"
                    android:text="@string/quit_game"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="@+id/results_try_again"
                    app:layout_constraintTop_toBottomOf="@+id/results_try_again" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
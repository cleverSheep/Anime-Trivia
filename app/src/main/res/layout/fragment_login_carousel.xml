<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_darkish_green">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableTop="@drawable/ic_anime_king_login"
        android:fontFamily="@font/baloobhairegular"
        android:text="@string/slogan"
        android:textAlignment="center"
        android:textColor="@color/color_white"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/rv_login_images_anime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.murrayde.animekingmobile.view.auth.AutoScrollRecyclerView
        android:id="@+id/rv_login_images_anime"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:paddingHorizontal="8dp"
        app:layout_constraintBottom_toTopOf="@+id/rv_login_images_manga"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.murrayde.animekingmobile.view.auth.AutoScrollRecyclerView
        android:id="@+id/rv_login_images_manga"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:paddingHorizontal="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/view5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view5" />

    <Button
        android:id="@+id/facebook_login_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/facebook_background_button"
        android:drawableStart="@drawable/facebook_logo_icon"
        android:fontFamily="@font/baloobhairegular"
        android:text="@string/connect_with_facebook"
        android:textColor="@color/color_white"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/google_login_button"
        app:layout_constraintStart_toStartOf="@+id/google_login_button"
        app:layout_constraintTop_toBottomOf="@+id/view6" />

    <Button
        android:id="@+id/google_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/google_bg_button"
        android:drawableStart="@drawable/icon_google"
        android:drawablePadding="16dp"
        android:fontFamily="@font/baloobhairegular"
        android:text="@string/connect_with_google"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_13sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/facebook_login_button" />

    <Button
        android:id="@+id/view5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/view6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/rv_login_images_manga"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_login_images_manga" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/bahnscrift"
        android:text="@string/credits_author"
        android:textAlignment="center"
        android:textColor="@color/color_black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
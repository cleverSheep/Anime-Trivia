<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.community.list_anime.AnimeListDetail">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--NOTE: Use theme instead of style when changing toolbar text/back arrow color-->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/detail_gradient"
            android:fitsSystemWindows="true"
            android:theme="@style/TestingTheme"
            android:translationZ="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/button_take_quiz"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/home_play_background"
            android:fontFamily="@font/baloobhairegular"
            android:text="@string/take_quiz"
            android:textColor="@color/color_white"
            android:textSize="@dimen/button_text_size"
            app:layout_constraintEnd_toEndOf="@+id/tv_description"
            app:layout_constraintStart_toStartOf="@+id/tv_description"
            app:layout_constraintTop_toBottomOf="@+id/tv_description" />

        <Button
            android:id="@+id/button_ask_question"
            android:layout_width="0dp"
            android:layout_height="57dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/home_button_credits"
            android:fontFamily="@font/baloobhairegular"
            android:text="@string/ask_question"
            android:textColor="@color/color_grey"
            android:textSize="@dimen/button_text_size"
            app:layout_constraintEnd_toEndOf="@+id/button_take_quiz"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/button_take_quiz"
            app:layout_constraintTop_toBottomOf="@+id/button_take_quiz" />

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="center"
            app:layout_constraintDimensionRatio="16:9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription"
            tools:src="@drawable/feature_graphic"
            tools:srcCompat="@drawable/abyss" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/title_bg"
            android:orientation="horizontal"
            android:paddingHorizontal="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tv_ask_question"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/baloobhairegular"
                android:textAlignment="viewStart"
                android:textColor="@android:color/white"
                android:textSize="23sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="RtlSymmetry"
                tools:text="Anime Title" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                android:background="@drawable/detail_notification_bg"
                android:src="@drawable/ic_notifications_none_black_24dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_ask_question"
                app:layout_constraintEnd_toStartOf="@+id/button"
                app:layout_constraintTop_toTopOf="@+id/tv_ask_question" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="@drawable/detail_join_btn_bg"
                android:fontFamily="@font/baloobhairegular"
                android:gravity="center"
                android:padding="1dp"
                android:text="Join"
                android:textAlignment="center"
                android:textColor="@color/color_grey"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageButton" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/tv_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="24dp"
            android:ellipsize="end"
            android:fontFamily="@font/baloobhairegular"
            android:maxLines="10"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fab_favorite"
            tools:text="@string/sample_text" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:src="@drawable/ic_favorite_border_black_24dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/iv_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_image" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:background="@drawable/detail_member_count_bg"
            android:fontFamily="@font/baloobhairegular"
            android:gravity="center"
            android:text="14 members"
            android:textColor="@color/color_white"
            app:layout_constraintBottom_toTopOf="@+id/tv_description"
            app:layout_constraintEnd_toStartOf="@+id/textView4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/tv_description"
            app:layout_constraintTop_toBottomOf="@+id/iv_image"
            tools:text="14 members" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:background="@drawable/detail_question_count_bg"
            android:fontFamily="@font/baloobhairegular"
            android:gravity="center"
            android:text="356 questions"
            android:textColor="@color/color_white"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toStartOf="@+id/textView5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="@+id/textView3"
            tools:text="356 questions" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:background="@drawable/detail_online_count_bg"
            android:fontFamily="@font/baloobhairegular"
            android:gravity="center"
            android:text="14 online"
            android:textColor="@color/color_white"
            app:layout_constraintBottom_toBottomOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="@+id/tv_description"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="@+id/textView4"
            tools:text="74 online" />

        <LinearLayout
            android:id="@+id/detail_linearlayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@+id/button_ask_question"
            app:layout_constraintStart_toStartOf="@+id/button_ask_question"
            app:layout_constraintTop_toBottomOf="@id/button_ask_question">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloobhairegular"
                android:gravity="center"
                android:text="Long live the king!"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/textView7"
                app:layout_constraintEnd_toEndOf="@+id/button_ask_question"
                app:layout_constraintStart_toStartOf="@+id/button_ask_question"
                app:layout_constraintTop_toBottomOf="@id/button_ask_question" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloobhairegular"
                android:gravity="center"
                android:text="This could be you!"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/textView6"
                app:layout_constraintStart_toStartOf="@+id/textView6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/detail_linearlayout"
            app:layout_constraintStart_toStartOf="@id/detail_linearlayout"
            app:layout_constraintTop_toBottomOf="@id/detail_linearlayout">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/crown_list_screen"
                tools:layout_editor_absoluteX="353dp"
                tools:layout_editor_absoluteY="5dp" />

            <include layout="@layout/detail_testing_first_place" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
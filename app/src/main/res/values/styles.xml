<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/color_white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Main app theme. -->
    <style name="MainAppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/color_white</item>
    </style>

    <style name="TestingTheme" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="TextAppearance.TabsFont" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/baloobhairegular</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MeneNavTheme">
        <item name="android:fontFamily">@font/baloobhairegular</item>
    </style>

    <style name="facebook_style">
        <item name="android:background">@drawable/facebook_drawable</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/baloobhairegular</item>
    </style>

    <style name="AnswerQuestion_ButtonText">
        <item name="android:textSize">25sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/baloobhairegular</item>
    </style>

    <style name="Question_Incorrect_Format_Button">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1.25</item>
        <item name="background">@drawable/background_question_incorrect_format</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_margin">8dp</item>
        <item name="fontFamily">@font/baloobhairegular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="Question_Incorrect_Format_Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.75</item>
        <item name="fontFamily">@font/baloobhairegular</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingHorizontal">8dp</item>
    </style>

    <style name="AnswerQuestion_Format_Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginVertical">16dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="background">@drawable/answer_question_background</item>
        <item name="fontFamily">@font/baloobhairegular</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
    </style>

</resources>

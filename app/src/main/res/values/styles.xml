<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/color_white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Main app theme. -->
    <style name="MainAppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/color_white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="background">@color/color_white</item>
    </style>

    <style name="ToolbarLightTheme" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarDarkTheme" parent="ThemeOverlay.AppCompat.Dark" />


    <style name="TextAppearance.TabsFont" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/baloobhairegular</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MeneNavTheme">
        <item name="android:fontFamily">@font/baloobhairegular</item>
    </style>

    <style name="facebook_style">
        <item name="android:background">@drawable/facebook_drawable</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/baloobhairegular</item>
    </style>

    <style name="AnswerQuestion_ButtonText">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/baloobhairegular</item>
    </style>

    <style name="Question_Incorrect_Format_Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="background">@color/colorAccent</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_margin">8dp</item>
        <item name="fontFamily">@font/baloobhairegular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="Question_Incorrect_Format_Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/baloobhairegular</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AnswerQuestion_Format_Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginVertical">16dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="background">@drawable/answer_question_background</item>
        <item name="fontFamily">@font/baloobhairegular</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="AskQuestion_Format_Edit_Wrong">
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColorHint">@color/color_white</item>
        <item name="android:hint">@string/wrong_choice</item>
        <item name="android:textCursorDrawable">@drawable/cursor_drawable</item>
        <item name="fontFamily">@font/baloobhairegular</item>
        <item name="background">@drawable/wrong_question_background</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="OrganicFtuxText">
        <item name="android:textSize">@dimen/organic_ftux_text_size</item>
        <item name="android:textColor">@color/adaptive_black_70_or_night_mode_white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="OrganicFtuxHeader" parent="OrganicFtuxText">
        <item name="android:textSize">@dimen/organic_ftux_header_text_size</item>
    </style>

    <style name="OnBoardingLTUXText">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/adaptive_black_85_or_night_mode_white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="DisclaimerLinkStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:layout_marginStart">28dp</item>
        <item name="android:layout_marginEnd">28dp</item>
        <item name="android:linksClickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textColorHighlight">#3668ff</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#4a4a4a</item>
        <item name="android:textColorLink">#4a4a4a</item>
    </style>

</resources>

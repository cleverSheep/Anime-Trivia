<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/home">

    <fragment
        android:id="@+id/home"
        android:name="com.murrayde.animeking.view.community.list_anime.AnimeList"
        tools:layout="@layout/fragment_list">
        <action
            android:id="@+id/action_listFragment_to_detailFragment"
            app:destination="@+id/detailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_listFragment_to_searchFragment"
            app:destination="@id/search" />
        <action
            android:id="@+id/action_home_to_answerRandomQuestions"
            app:destination="@id/answerRandomQuestions"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.murrayde.animeking.view.community.list_anime.AnimeListDetail"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="AnimeAttributes"
            app:argType="com.murrayde.animeking.model.community.AnimeAttributes.Attributes" />
        <action
            android:id="@+id/action_detailFragment_to_lowQuestionCountFragment"
            app:destination="@id/lowQuestionCountFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left" />
        <action
            android:id="@+id/action_detailFragment_to_askQuestionFragment"
            app:destination="@id/askQuestionFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_detailFragment_to_answerQuestionFragment"
            app:destination="@id/answerQuestionFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left" />
        <action
            android:id="@+id/action_detailFragment_to_listFragment"
            app:destination="@id/home"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"
            app:popUpTo="@+id/detailFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/lowQuestionCountFragment"
        android:name="com.murrayde.animeking.view.community.LowQuestionCount"
        tools:layout="@layout/fragment_low_question_count">
        <action
            android:id="@+id/action_lowQuestionCountFragment_to_askQuestionFragment"
            app:destination="@id/askQuestionFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left" />
        <argument
            android:name="AnimeAttributes"
            app:argType="com.murrayde.animeking.model.community.AnimeAttributes.Attributes" />
    </fragment>
    <fragment
        android:id="@+id/askQuestionFragment"
        android:name="com.murrayde.animeking.view.community.AskQuestion"
        tools:layout="@layout/fragment_ask_question">
        <argument
            android:name="AnimeAttributes"
            app:argType="com.murrayde.animeking.model.community.AnimeAttributes.Attributes" />
        <action
            android:id="@+id/action_askQuestionFragment_to_detailFragment"
            app:destination="@id/detailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"
            app:popUpTo="@+id/detailFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/answerQuestionFragment"
        android:name="com.murrayde.animeking.view.community.AnswerQuestion"
        tools:layout="@layout/fragment_answer_question">
        <argument
            android:name="AnimeAttributes"
            app:argType="com.murrayde.animeking.model.community.AnimeAttributes.Attributes" />
        <action
            android:id="@+id/action_answerQuestionFragment_to_viewResults"
            app:destination="@id/viewResults" />
    </fragment>
    <activity
        android:id="@+id/homeScreenActivity"
        android:name="com.murrayde.animeking.view.landing_screen.HomeScreenActivity"
        tools:layout="@layout/activity_home_screen" />
    <fragment
        android:id="@+id/search"
        android:name="com.murrayde.animeking.view.search.SearchFragment"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_listFragment"
            app:destination="@id/home"
            app:popUpTo="@+id/home"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_searchFragment_to_detailFragment"
            app:destination="@id/detailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left" />
    </fragment>
    <fragment
        android:id="@+id/viewResults"
        android:name="com.murrayde.animeking.view.community.results_screen.ViewResults"
        android:label="fragment_view_results"
        tools:layout="@layout/fragment_view_results">
        <argument
            android:name="list_questions"
            app:argType="com.murrayde.animeking.model.community.CommunityQuestion[]"
            app:nullable="true" />
        <action
            android:id="@+id/action_viewResults_to_detailFragment"
            app:destination="@id/detailFragment"
            app:popUpTo="@id/detailFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="AnimeAttributes"
            app:argType="com.murrayde.animeking.model.community.AnimeAttributes.Attributes" />
    </fragment>
    <fragment
        android:id="@+id/profile"
        android:name="com.murrayde.animeking.view.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/more"
        android:name="com.murrayde.animeking.view.settings.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_more_to_authenticationActivity"
            app:destination="@id/authenticationActivity"
            app:popUpTo="@id/authenticationActivity" />
    </fragment>
    <fragment
        android:id="@+id/answerRandomQuestions"
        android:name="com.murrayde.animeking.view.random.AnswerRandomQuestions"
        android:label="fragment_random_questions"
        tools:layout="@layout/fragment_random_questions">
        <action
            android:id="@+id/action_answerRandomQuestions_to_home"
            app:destination="@id/home" />
    </fragment>
    <activity
        android:id="@+id/authenticationActivity"
        android:name="com.murrayde.animeking.view.auth.AuthenticationActivity"
        android:label="activity_authentication"
        tools:layout="@layout/activity_authentication" />
</navigation>
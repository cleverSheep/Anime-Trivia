<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.murrayde.retrofittesting.view.list_anime.AnimeList"
        android:label="fragment_list"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/action_listFragment_to_detailFragment"
            app:destination="@+id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.murrayde.retrofittesting.view.list_anime.AnimeListDetail"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="AnimeAttributes"
            app:argType="com.murrayde.retrofittesting.model.AnimeAttributes.Attributes" />
        <action
            android:id="@+id/action_detailFragment_to_lowQuestionCountFragment"
            app:destination="@id/lowQuestionCountFragment" />
        <action
            android:id="@+id/action_detailFragment_to_askQuestionFragment"
            app:destination="@id/askQuestionFragment" />
        <action
            android:id="@+id/action_detailFragment_to_answerQuestionFragment"
            app:destination="@id/answerQuestionFragment" />
    </fragment>
    <fragment
        android:id="@+id/lowQuestionCountFragment"
        android:name="com.murrayde.retrofittesting.view.questions.LowQuestionCount"
        android:label="fragment_low_question_count"
        tools:layout="@layout/fragment_low_question_count" >
        <action
            android:id="@+id/action_lowQuestionCountFragment_to_askQuestionFragment"
            app:destination="@id/askQuestionFragment" />
        <argument
            android:name="AnimeAttributes"
            app:argType="com.murrayde.retrofittesting.model.AnimeAttributes.Attributes" />
    </fragment>
    <fragment
        android:id="@+id/askQuestionFragment"
        android:name="com.murrayde.retrofittesting.view.questions.AskQuestion"
        android:label="fragment_ask_question"
        tools:layout="@layout/fragment_ask_question" >
        <argument
            android:name="AnimeAttributes"
            app:argType="com.murrayde.retrofittesting.model.AnimeAttributes.Attributes" />
        <action
            android:id="@+id/action_askQuestionFragment_to_detailFragment"
            app:destination="@id/detailFragment"
            app:popUpTo="@+id/detailFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/answerQuestionFragment"
        android:name="com.murrayde.retrofittesting.view.questions.AnswerQuestion"
        android:label="fragment_answer_question"
        tools:layout="@layout/fragment_answer_question" >
        <argument
            android:name="AnimeAttributes"
            app:argType="com.murrayde.retrofittesting.model.AnimeAttributes.Attributes" />
        <action
            android:id="@+id/action_answerQuestionFragment_to_detailFragment"
            app:destination="@id/detailFragment"
            app:popUpTo="@+id/detailFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>
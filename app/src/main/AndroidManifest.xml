<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.murrayde.animekingtrivia">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.murrayde.animekingtrivia.application.BaseApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity
            android:name="com.murrayde.animekingtrivia.view.auth.AuthenticationActivity"
            android:screenOrientation="fullSensor" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.murrayde.animekingtrivia.view.landing_screen.SplashScreen"
            android:noHistory="true"
            android:screenOrientation="fullSensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.murrayde.animekingtrivia.view.MainActivity"
            android:configChanges="locale|orientation"
            android:screenOrientation="fullSensor" />
        <activity
            android:name="com.murrayde.animekingtrivia.view.landing_screen.HomeScreenActivity"
            android:screenOrientation="fullSensor" />
    </application>

</manifest>